<h1>Club Records</h1>


<ul class="records">
<% @records.each do |record| -%>
	<li>
		<h2><%= link_to record.name, record %></h2>
		<span class="name"><%= record.current_holder.name %></span>	:
		<%= holder_score record.current_holder %>

		<% admin_div do -%>
			<%= link_to 'Show', record %>
			<%= link_to 'Edit', edit_record_path(record) %>
			<%= link_to 'Destroy', record, :confirm => 'Are you sure?', :method => :delete %>
		<% end -%>
	</li>
<% end -%>
</ul>

<hr>

<table>
  <tr>
    <th>Name</th>
    <th>Unit</th>
    <th>Number of props</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= record.name %></td>
    <td><%= record.unit %></td>
    <td><%= record.number_of_props %></td>
  </tr>
<% end %>
</table>

<br />

