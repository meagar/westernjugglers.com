
<h1>Login</h1>

<%= form_for @user_session, :url => '/login' do |f| %>
	<%= f.error_messages %>

	<p>
  <%= f.label :email %><br />
	<%= f.text_field :email %><br />
	</p>

	<p>
  <%= f.label :password %><br />
	<%= f.password_field :password %><br />
	</p>

  <p>
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
	</p>

	<p>
	<%= f.submit "Login" %>
	</p>
<% end %>
