<!DOCTYPE html>
<html>
<head>
	<title>UWO Juggling Club</title>
	
  <%= stylesheet_link_tag :all %>
	<%= javascript_include_tag :defaults %>

  <%= csrf_meta_tag %>
</head>

<body>

	<div id="wrapper">

		<header>
			<h1 id="header">UWO Juggling Club</h1>

			<div id="up-coming">
				<p class="meeting">
					Next Meeting: <%= @next_meeting.starts_at.strftime('%A %B %e') %> in <%= @next_meeting.location %>
				</p>

				<p class="event">
				Next Event: <a href="/events"><%= @next_event.name %></a>
				</p>
				<div style="clear:both"></div>	
			</div>
				
			<nav id="main">
				<%= top_nav %>
			</nav>
		</header>

		<section id="content">
			<% if notice %>
				<p id="notice"><%= notice %></p>
			<% end %>
			<%= yield %>
		</section><!-- #content -->

		<footer>
			<p class="copy">&copy; <%= Date.today.year %> Western Juggling Club</p>
			<p class="author">Design by <a href="http://meagar.net">Matthew Eagar</a></p>
		</footer>

	</div><!-- #wrapper -->
</body>

</html>
